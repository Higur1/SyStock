// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Supplier {
  id                 Int                @id @default(autoincrement())
  company_name       String
  email              String             @unique
  cnpj               String             @unique
  state_registration String
  phone              String
  Supplier_Address   Supplier_Address[]
  Product            Product[]

  @@map("suppliers")
}

model Supplier_Address {
  id          Int    @id @default(autoincrement())
  supplier_id Int    @unique
  cep         String
  city        String
  state       String
  street      String
  number      Int
  complement  String

  id_supplier_fk Supplier @relation(fields: [supplier_id], references: [id])

  @@map("supplier_address")
}

model Category {
  id      Int       @id @default(autoincrement())
  name    String
  Product Product[]

  @@map("categories")
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  ncmSh       String
  price       Decimal
  category_id Int
  supplier_id Int

  id_category_fk Category @relation(fields: [category_id], references: [id])
  id_supplier_fk Supplier @relation(fields: [supplier_id], references: [id])
  Stock          Stock[]

  @@map("products")
}

model Stock {
  id         Int @id @default(autoincrement())
  product_id Int
  quantity   Int

  id_product_fk Product @relation(fields: [product_id], references: [id])

  @@map("stock")
}

model User_Types {
  id   Int    @id @default(autoincrement())
  name String
  User User[]

  @@map("user_types")
}

model User {
  id            Int    @id @default(autoincrement())
  name          String
  user_login    String @unique
  user_password String
  email         String @unique
  user_type_id  Int

  user_type_id_fk User_Types @relation(fields: [user_type_id], references: [id])

  @@map("users")
}
